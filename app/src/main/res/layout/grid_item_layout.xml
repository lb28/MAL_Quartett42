<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_border">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >

            <ImageView
                android:id="@+id/galleryListImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignRight="@id/galleryListImage"
                android:layout_alignEnd="@id/galleryListImage"
                android:layout_alignBottom="@id/galleryListImage"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/colorAccent"
                style="@style/Widget.AppCompat.ImageButton"
                android:background="@android:drawable/ic_dialog_info"
                android:id="@+id/deckImgDescView"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/galleryListName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="12sp"
            android:text="Deck Titel"/>

    </LinearLayout>

